<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ijoo">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foto_influ"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/maudy"
                android:layout_gravity="center"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nama_influ"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Mbak Maudy"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/tgl_order"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Tanggal Order"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/total_order"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Total Order"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLunas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LUNAS"
                    android:textColor="#D32F2F"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/btnButtonDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>