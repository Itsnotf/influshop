<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroudblack_1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroudblack_1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="@string/sign_first"
                android:textSize="35sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Email"
            android:padding="12dp"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:inputType="text"
            android:textColorHighlight="@color/black"
            android:background="@drawable/rouded_edittext"/>

        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Password"
            android:padding="12dp"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:inputType="text"
            android:textColorHighlight="@color/black"
            android:background="@drawable/rouded_edittext"/>

        <EditText
            android:id="@+id/etNohp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="No Handphone"
            android:padding="12dp"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:inputType="text"
            android:textColorHighlight="@color/black"
            android:background="@drawable/rouded_edittext"/>

        <EditText
            android:id="@+id/etUser"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Username"
            android:padding="12dp"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:inputType="text"
            android:textColorHighlight="@color/black"
            android:background="@drawable/rouded_edittext"/>

        <Button
            android:id="@+id/btFoto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/choose_image"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:background="@drawable/rouded_button_grey" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivSelected"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_gravity="center"
            android:padding="5dp" />

        <TextView
            android:id="@+id/btTerdaftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Belum punya akun? Daftar sini"
            android:textColor="#007ACC"
            android:clickable="true"
            android:onClick="onClickText" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>