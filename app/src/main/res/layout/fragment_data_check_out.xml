<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudblack_1"
    tools:context=".DataCheckOut">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:background="@color/backgroudblack_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroudblack_1"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="15dp"
                android:text="Check Out"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="@color/white" />


            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Nama Costumer"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:inputType="text"
                android:textColorHighlight="@color/black"
                android:background="@drawable/rouded_edittext"/>

            <EditText
                android:id="@+id/etSocmedPerusahaan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:hint="Alamat Email"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:background="@drawable/rouded_edittext"/>

            <EditText
                android:id='@+id/etDeskripsiBisnis'
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:hint="Alamat Rumah"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:background="@drawable/rouded_edittext"/>

            <EditText
                android:id="@+id/etPesanUntukInfluencer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:hint="Note Untuk Seller"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:background="@drawable/rouded_edittext"/>

            <TextView
                android:id="@+id/etTotalHarga"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Total : Rp. 1.797.000.00"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="220dp"
                android:gravity="center"
                android:layout_gravity="start"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btProses"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Proses"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:background="@drawable/rounded_button"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>