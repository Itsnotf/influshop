<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KatalogActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:backgroundTint="@color/ijoo"
            android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/foto_influencer_main"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/maudy"
                    android:layout_gravity="center"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/nama_influ_main"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Mbak Maudy"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/bio_influ"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Deskripsi / Bio"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="10dp">


                    <ImageView
                        android:id="@+id/facebook"
                        android:layout_width="300px"
                        android:layout_height="200px"
                        android:src="@drawable/facebook"
                        android:layout_margin="5dp" />
                    <ImageView
                        android:id="@+id/instagram"
                        android:layout_width="300px"
                        android:layout_height="180px"
                        android:src="@drawable/instagram"
                        android:layout_margin="5dp"/>
                    <ImageView
                        android:id="@+id/tiktok"
                        android:layout_width="300px"
                        android:layout_height="200px"
                        android:src="@drawable/tiktok"
                        android:layout_margin="5dp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvKatalog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:listitem="@layout/isi_katalog"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>